	xthickness		= 3
	ythickness		= 3
}

style "sysex-scroll" = "sysex-default"
{
	text[NORMAL]		= @bg1		#
	fg[SELECTED]		= @bg1		#
	bg[NORMAL]		= @grey1	# scrollbar handle
	bg[ACTIVE]		= @bg1_shade	# scrollbar background
	bg[PRELIGHT]		= @special2	# scrollbar handle highlight
}

